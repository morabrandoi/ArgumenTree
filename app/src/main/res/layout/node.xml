<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:elevation="4dp">


    <TextView
        android:id="@+id/nodeBrief"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:text="SAMPLE. IF I SEE THIS SOMETHINGS RIGHT"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/nodeClaim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="@+id/nodeBrief"
        app:layout_constraintStart_toStartOf="@+id/nodeBrief"
        app:layout_constraintTop_toBottomOf="@+id/nodeBrief"
        tools:text="This is a sample text since I wonder if there is a cool person in the world of beans that I am just streaming my consciousness" />

    <TextView
        android:id="@+id/nodeUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/nodeClaim"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nodeClaim"
        app:layout_constraintTop_toBottomOf="@+id/nodeClaim"
        tools:text="usernameHere" />
</androidx.constraintlayout.widget.ConstraintLayout>